# Configurações do Servidor
NODE_ENV=production
PORT=5000

# Banco de Dados PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/nome_do_banco
DATABASE_URL=postgresql://helpdesk_user:senha_segura@localhost:5432/helpdesk

# Configurações PostgreSQL (extraídas automaticamente do DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=helpdesk_user
PGPASSWORD=senha_segura
PGDATABASE=helpdesk

# Autenticação - Sessão
# Gere uma string aleatória segura para SESSION_SECRET
# Exemplo: openssl rand -base64 32
SESSION_SECRET=sua_chave_secreta_muito_segura_aqui_pelo_menos_32_caracteres

# Autenticação - Replit Auth (OIDC)
# Se estiver usando Replit Auth, configure:
# ISSUER_URL=https://replit.com/auth
# REPL_ID=seu_repl_id_aqui

# OU configure outro provedor OIDC:
# ISSUER_URL=https://seu-provedor-oidc.com
# CLIENT_ID=seu_client_id
# CLIENT_SECRET=seu_client_secret

# Domínio da aplicação (para callbacks OAuth)
# APP_URL=https://seu-dominio.com

# Logs
LOG_LEVEL=info
